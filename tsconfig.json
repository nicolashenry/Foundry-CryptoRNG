{
	"compilerOptions": {
	  "sourceMap": true,
	  "module": "esnext",
	  "moduleResolution": "node",
	  "esModuleInterop": true,
	  "target": "es2017",
	  "strictPropertyInitialization": true,
	  "strictNullChecks": true,
	  "strictBindCallApply": true,
	  "removeComments": false,
	  "strict": true,
	  "lib": [
		"dom",
		"es6"
	  ],
	  "types": ["@league-of-foundry-developers/foundry-vtt-types"],
	  "outDir": "./dist/",
	  "rootDir": "./src/"
	},
	"compileOnSave": true
}